{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "games/**/*", "use": "@vercel/static" },
    { "src": "movies/**/*", "use": "@vercel/static" },
    { "src": "ai/**/*", "use": "@vercel/static" },
    { "src": "tools/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },

    // Games SPA routing
    { "src": "/games/?", "dest": "/games/app.html" },
    { "src": "/games/(.*)", "dest": "/games/app.html" },

    // Other sections
    { "src": "/movies/(.*)", "dest": "/movies/$1" },
    { "src": "/ai/(.*)", "dest": "/ai/$1" },
    { "src": "/tools/(.*)", "dest": "/tools/$1" }
  ]
}
